<% provide :title, t(".edit_trainee") %>
<div class="container">
  <h2 class="my-md-3"><%= t(".edit_trainee") %></h2>
  <%= form_for [:supervisor, @user] do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div><br />

    <div class="form-group">
      <%= f.submit t(".edit_trainee"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
