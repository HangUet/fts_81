<tr class="d-flex">
  <td class="col-2"><%= link_to user.name, supervisor_user_path(user),
    class: "text-dark" %></td>
  <td class="col-2"><%= user.email %></td>
  <td class="col-2 text-center"><%= user.avatar %></td>
  <td class="col-2 text-center"><%= user.address %></td>
  <td class="col-1 text-center"><i class="fa fa-phone" ></i>&nbsp;<%= user.phone %></td>
  <td class="col-1 text-center"><%= user.created_at.strftime("%d-%m-%Y") %></td>
    <% if current_user.supervisor? %>
    <td class="col-2 text-center">
      <%= link_to t(".delete"), supervisor_user_path(user), method: :delete,
        data: {confirm: t(".confirm")} %>&nbsp;<i class="fa fa-trash-o"></i> |
      <%= link_to t(".edit"), edit_supervisor_user_path(user) %>&nbsp;<i class="fa fa-pencil-square-o"></i>
    </td>
  <% end %>
</tr>
