<div class="content-wrapper">
  <div class="row">
    <div class="col-md-4">
      <h3><%= @course.name %></h3>
      <p><%= @course.description %></p>
      <p><%= @course.start_time.strftime(Settings.format_time) %></p>
      <p><%= @course.end_time.strftime(Settings.format_time) %></p>
    </div>
    <div class="row col-md-8">
      <% @course.subjects.each_with_index do |subject, index| %>
        <div class="col-md-6">
          <h3><%= subject.name %></h3>
          <p><%= subject.description %></p>
          <p><%= subject.start_time.strftime(Settings.format_time) %></p>
          <p><%= subject.end_time.strftime(Settings.format_time) %></p>
        </div>
        <div class="col-md-6">
          <% subject.tasks.each_with_index do |task, index| %>
            <h4><%= task.name %></h4>
            <p><%= task.description %></p>
            <p><%= task.content %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
