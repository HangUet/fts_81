<div class="content-wrapper">
  <div class="row">
    <div class="col-md-4">
      <h3><%= @course.name %></h3>
      <p><%= @course.description %></p>
      <p><%= training_time @course %></p>
    </div>
    <div class="row col-md-8">
      <% @course.subjects.each_with_index do |subject, index| %>
        <div class="col-md-6">
          <h3><%= subject.name %></h3>
          <p><%= subject.description %></p>
          <p><%= training_time subject %></p>
        </div>
        <div class="col-md-6">
          <% subject.tasks.each_with_index do |task, index| %>
            <h4><%= task.name %></h4>
            <p><%= task.description %></p>
            <p><%= task.content %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <h4 class="panel-title"><%= t "user.suppervisor_course" %><span class="badge"><%= @supervisors.size %></span></h4>
  <div class="row all-member">
    <% @supervisors.each do |supervisor| %>
      <div class="col-md-4 each-member">
        <div class="avatar">
          <%= image_tag get_avatar(supervisor), class:"avatar" %>
        </div>
        <div class="info-member">
          <h3><%= supervisor.name %></h3>
          <p><%= supervisor.email %></p>
            <%= link_to t(".view"), supervisor_user_path(supervisor.id), class:"btn pull-left bt-view" %>
        </div>
      </div>
    <% end %>
  </div>
  <h4 class="panel-title"><%= t "user.trainee_course" %><span class="badge"><%= @trainees.size %></span></h4>
  <div class="row all-member">
    <% @trainees.each do |trainee| %>
      <div class="col-md-4 each-member">
        <div class="avatar">
          <%= image_tag get_avatar(trainee), class:"avatar" %>
        </div>
        <div class="info-member">
          <h3><%= trainee.name %></h3>
          <p><%= trainee.email %></p>
          <%= link_to t(".view"), trainee_user_path(trainee.id), class:"btn pull-left bt-view" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="modal fade" id="modal-id">
</div>
