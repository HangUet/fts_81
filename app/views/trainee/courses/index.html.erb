<div class="content-wrapper">
  <h3><%= t ".my_courses" %></h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t ".course" %></th>
        <th><%= t ".subjects" %></th>
        <th><%= t ".supervisors" %></th>
        <th><%= t ".view_progress" %></th>
      </tr>
    </thead>
    <tbody>
      <% @my_courses.each do |mycourse| %>
        <tr>
          <td><%= link_to mycourse.name, trainee_course_path(mycourse.id) %></td>
          <td>
            <% mycourse.subjects.each_with_index do |subject, index| %>
              <%= index + 1 %>:&nbsp;<%= subject.name %><br>
            <% end %>
          </td>
          <td>
            <ul>
              <% mycourse.users.each_with_index do |supervisor, index| %>
                <% if supervisor.supervisor? %>
                  <li><%= supervisor.name%></li>
                <% end %>
              <% end %>
            </ul>
          </td>
          <td>
            <%= link_to t(".your_progress"), "#", class: "btn btn-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
